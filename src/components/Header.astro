---
const weeks = Array.from({ length: 12 }, (_, i) => ({
    number: i + 1,
    href: `/week/${i + 1}`
}));

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
---

<header class="flex flex-col gap-6 py-6 border-b border-gray-200 mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-nmbs-blue m-0">Lost in Tra(i)nslation</h1>
            <p class="text-sm text-gray-500">Procesdocumentatie</p>
        </div>
        <div class="text-right">
            <p class="font-semibold text-nmbs-text">Naam Student</p>
            <p class="text-sm text-gray-500">Groep X</p>
        </div>
    </div>

    <nav class="flex flex-wrap items-center gap-2">
        {!isHome && (
            <a href="/" class="btn bg-gray-600 text-white hover:bg-gray-700 text-sm py-1 px-3 mr-4">
                ‚Üê Back Home
            </a>
        )}
        
        <div class="flex flex-wrap gap-2">
            {weeks.map((week) => (
                <a 
                    href={week.href} 
                    class={`px-3 py-1 rounded text-sm font-medium transition-colors ${
                        currentPath.startsWith(week.href)
                            ? 'bg-nmbs-blue text-white' 
                            : 'bg-gray-200 text-gray-700 hover:bg-gray-300 hover:text-gray-900 no-underline'
                    }`}
                >
                    Week {week.number}
                </a>
            ))}
        </div>
    </nav>
</header>
